<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:padding="18dp"
    tools:context=".View.AddRoom">

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:fontFamily="@font/opensans_regular"
        android:text="Add Room"
        android:textColor="#3FADA8"
        android:textSize="40sp" />


    <TextView
        android:id="@+id/room_size"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="20dp"
        android:background="@drawable/theme_button_background"
        android:elevation="3dp"
        android:fontFamily="@font/opensans_regular"
        android:singleLine="true"
        android:padding="5dp"
        android:text="Total Rooms: "
        android:textSize="20sp" />


    <!--   drop down-->


    <Spinner
        android:id="@+id/room_spinner"
        android:layout_marginTop="20dp"
        android:layout_width="match_parent"
        android:entries="@array/room_type"
        android:layout_height="40dp"
        android:background="@drawable/theme_button_background"/>

    <EditText
        android:id="@+id/room_bed"
        android:layout_width="match_parent"
        android:layout_height="60dp"
        android:layout_marginStart="2dp"
        android:layout_marginTop="20dp"
        android:layout_marginEnd="2dp"
        android:background="@drawable/theme_button_background"
        android:elevation="3dp"
        android:hint="Bed Name"
        android:paddingStart="30dp"
        android:singleLine="true"
        android:textSize="15sp" />


    <Button
        android:id="@+id/room_submit"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="15dp"
        android:background="@drawable/paymentactivity_button1"
        android:fontFamily="@font/opensans_regular"
        android:text="Submit"
        android:textAllCaps="false"
        android:textColor="#FFFFFF"
        android:textSize="16sp" />

</LinearLayout>