<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:padding="18dp"
    tools:context=".View.AddDoctor">

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:fontFamily="@font/opensans_regular"
        android:text="Add Treatment"
        android:textColor="#3FADA8"
        android:textSize="40sp" />



    <EditText
        android:id="@+id/treatment_name"
        android:layout_width="match_parent"
        android:layout_height="60dp"
        android:layout_marginTop="20dp"
        android:singleLine="true"
        android:background="@drawable/theme_button_background"
        android:elevation="3dp"
        android:layout_marginStart="2dp"
        android:layout_marginEnd="2dp"
        android:hint="Treatment Name"
        android:paddingStart="30dp"
        android:textSize="15sp" />


    <EditText
        android:id="@+id/treatment_charges"
        android:layout_width="match_parent"
        android:layout_height="60dp"
        android:layout_marginTop="20dp"
        android:singleLine="true"
        android:background="@drawable/theme_button_background"
        android:elevation="3dp"
        android:inputType="numberSigned"
        android:hint="Treatment Charges"
        android:layout_marginStart="2dp"
        android:layout_marginEnd="2dp"
        android:paddingStart="30dp"
        android:textSize="15sp" />



    <EditText
        android:id="@+id/treatment_medicine"
        android:layout_width="match_parent"
        android:layout_height="60dp"
        android:layout_marginTop="20dp"
        android:singleLine="true"
        android:background="@drawable/theme_button_background"
        android:elevation="3dp"
        android:hint="Medicine Charges"
        android:inputType="numberSigned"
        android:layout_marginStart="2dp"
        android:layout_marginEnd="2dp"
        android:paddingStart="30dp"
        android:textSize="15sp" />


    <Button
        android:id="@+id/treatment_submit"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="15dp"
        android:textAllCaps="false"
        android:textSize="16sp"
        android:fontFamily="@font/opensans_regular"
        android:text="Submit"
        android:textColor="#FFFFFF"
        android:background="@drawable/paymentactivity_button1"/>

</LinearLayout>